<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ShopBundle\Entity\Users" table="users">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="250" nullable="false"/>
    <field name="surename" type="string" column="surename" length="250" nullable="false"/>
    <field name="login" type="string" column="login" length="16" nullable="false"/>
    <field name="password" type="string" column="password" length="32" nullable="false"/>
    <field name="lang" type="string" column="lang" length="20" nullable="false"/>
    <field name="role" type="string" column="role" length="20" nullable="false"/>
    <field name="email" type="text" column="email" nullable="false"/>
    <field name="lastAccess" type="datetime" column="last_access" nullable="false"/>
    <field name="created" type="date" column="created" nullable="false"/>
    <field name="modified" type="date" column="modified" nullable="false"/>
    <field name="createdBy" type="string" column="created_by" length="100" nullable="false"/>
    <field name="modifiedBy" type="string" column="modified_by" length="100" nullable="false"/>
  </entity>
</doctrine-mapping>
