{% extends 'ShopBundle:admin:index.html.twig' %}

{% block pages %}
<div class="row">
    <div class="col-lg-12">
        <h2>Категории</h2>
        <a href="/admin/catalog/category/create" class="btn btn-danger">Создать</a>
        <br/><br/>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Создан</th>
                    <th>Создал</th>
                    <th>Изменён</th>
                    <th>Изменял</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for cat in categories_list.categories %}
                    <tr>
                        <td>{{ cat.id }}</td>
                        <td>{{ cat.name }}</td>
                        <td>{{ cat.created }}</td>
                        <td>{{ cat.created_by }}</td>
                        <td>{{ cat.modified }}</td>
                        <td>{{ cat.modified_by }}</td>
                        <td>
                            <a href="/admin/catalog/category/{{ cat.id }}/view/1" class="glyphicon glyphicon-folder-open list curr-pointer"></a>&nbsp;&nbsp;
                            <a href="/admin/catalog/category/{{ cat.id }}/edit" class="glyphicon glyphicon-edit list curr-pointer"></a>&nbsp;&nbsp;
                            <a href="/admin/catalog/category/{{ cat.id }}/delete" class="glyphicon glyphicon-remove list curr-pointer"></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% include "ShopBundle:admin:pagination.html.twig" with {count:categories_list.count,curr_page:curr_page,uri:"/admin/catalog/categories/"} only %}
    </div>
</div>
{% endblock %}


        
