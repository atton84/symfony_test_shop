{% block body %}
    <section id="slider"><!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for key,item in slideshow_frames %}
                            <li data-target="#slider-carousel" data-slide-to="{{ key }}" class="{%if loop.first %}active{% endif %}"></li>
                        {% endfor %}
                    </ol>

                    <div class="carousel-inner">
                        {% for item in slideshow_frames %}
                            <div class="item {%if loop.first %}active{% endif %}">
                                <div class="col-sm-12">
                                    <a href="/pictures/slideshow/{{ item.url }}" >
                                        <img src="/pictures/slideshow/{{ item.url }}" class="img-responsive" style="height: 400px;margin-left:0px;" alt="{{ item.text }}" />
                                        <span class="title-slider">{{ item.text }}</span>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->
