<div class="row">
    <div class="col-md-12 text-center">
        {% if count>1 %}
            <div class="pagination">
                {% for page in 1..count-1 %}
                    <a class="btn btn-default {% if curr_page==page %}btn-warning{% endif %}" href="/{{uri}}/page/{{ page }}">{{ page }}</a>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
        
